{
  "states": [
    "INIT",
    "BOUND",
    "INIT-REBOOT",
    "SELECTING",
    "REQUESTING",
    "RENEWING",
    "REBINDING",
    "REBOOTING"
  ],
  "initial_state": "INIT-REBOOT",
  "final_states": [],
  "transitions": [
    {
      "from": "INIT",
      "requisite": "receives DHCPACK",
      "to": "BOUND",
      "actions": [
        "check parameters",
        "configure client"
      ],
      "response": "DHCPACK"
    },
    {
      "from": "INIT",
      "requisite": "receives DHCPNAK or timeout",
      "to": "INIT",
      "actions": [
        "restart initialization"
      ],
      "response": "DHCPNAK"
    },
    {
      "from": "BOUND",
      "requisite": "sends DHCPRELEASE",
      "to": "INIT",
      "actions": [
        "release lease"
      ],
      "response": "DHCPRELEASE"
    },
    {
      "from": "INIT",
      "requisite": "no response after DHCPREQUEST (reuse)",
      "to": "BOUND",
      "actions": [
        "use previous address"
      ],
      "response": "none"
    },
    {
      "from": "INIT",
      "requisite": "Send DHCPDISCOVER",
      "to": "SELECTING",
      "actions": [
        "Broadcast DHCPDISCOVER"
      ],
      "response": "DHCPOFFER(s)"
    },
    {
      "from": "SELECTING",
      "requisite": "Select offer & send DHCPREQUEST",
      "to": "REQUESTING",
      "actions": [
        "Send DHCPREQUEST with server ID"
      ],
      "response": "DHCPACK/DHCPNAK"
    },
    {
      "from": "REQUESTING",
      "requisite": "Receive DHCPACK",
      "to": "BOUND",
      "actions": [
        "Record lease"
      ],
      "response": "DHCPACK"
    },
    {
      "from": "REQUESTING",
      "requisite": "Receive DHCPNAK or lease expired",
      "to": "INIT",
      "actions": [
        "Halt network"
      ],
      "response": "DHCPNAK"
    },
    {
      "from": "BOUND",
      "requisite": "T1 timer expires",
      "to": "RENEWING",
      "actions": [
        "Unicast DHCPREQUEST to leasing server"
      ],
      "response": "DHCPACK/DHCPNAK"
    },
    {
      "from": "RENEWING",
      "requisite": "Receive DHCPACK",
      "to": "BOUND",
      "actions": [
        "Update lease timers"
      ],
      "response": "DHCPACK"
    },
    {
      "from": "RENEWING",
      "requisite": "T2 timer expires",
      "to": "REBINDING",
      "actions": [
        "Broadcast DHCPREQUEST"
      ],
      "response": "DHCPACK/DHCPNAK"
    },
    {
      "from": "REBINDING",
      "requisite": "Receive DHCPACK",
      "to": "BOUND",
      "actions": [
        "Update lease timers"
      ],
      "response": "DHCPACK"
    },
    {
      "from": "REBINDING",
      "requisite": "Lease expiration",
      "to": "INIT",
      "actions": [
        "Stop network processing"
      ],
      "response": "None"
    },
    {
      "from": "INIT-REBOOT",
      "requisite": "Send DHCPREQUEST with known address",
      "to": "REQUESTING",
      "actions": [
        "Broadcast DHCPREQUEST"
      ],
      "response": "DHCPACK/DHCPNAK"
    },
    {
      "from": "REBOOTING",
      "requisite": "Detect address conflict",
      "to": "INIT",
      "actions": [
        "Send DHCPDECLINE"
      ],
      "response": "None"
    }
  ]
}